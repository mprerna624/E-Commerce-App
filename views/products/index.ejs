<!-- For including boilerplate -->
<% layout('layouts/boilerplate') %> 

    <div class="row products">
      <% for(let product of products){ %>
            <div class="col-lg-3 col-md-6 mb-3 mx-4">
                <div class="card shadow-sm mx-auto position-relative" style="width: 20rem;">
                    <img src="<%=product.img%>" class="card-img-top" alt="item image">
                    <span class="badge rounded-pill bg-light text-dark w-27 position-absolute translate-middle-y" style="top:41%;left:5%">
                            <%=product.avgRating%>  &star; | <%=product.reviews.length%> reviews 
                    </span>
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            <span class="fw-bold"><%= product.name %></span> 
                            <span class="btn like-btn" product-id="<%=product._id%>"> <!-- Here product-id is a custom(user-defined) attribute -->
                                <% if(currentUser && currentUser.wishList.includes(product._id)){ %>
                                       <i class="fa-solid fa-heart"></i>
                                <% } else{ %>
                                        <i class="fa-regular fa-heart"></i>
                                <% } %>
                        </span>
                        </h5>
                        <!-- <p class="card-text"><%= product.desc%></p> -->
                        <% if(product.reviews.length){ %>
                            <p class="text-muted"><%=product.reviews.length%> reviews</p>
                        <%}else{%>
                            <p class="text-muted">No reviews</p>
                        <% } %> 
                        <h6 class="card-title fw-bold"><span class="fw-normal fs-6 text-decoration-line-through">â‚¹<%= product.price*2 %></span> Rs.<%= product.price %> <span class="fw-normal fs-6 text-warning">( 50 % OFF )</span> </h6>
                        <a href="/products/<%=product._id%>" class="btn btn-sm show-btn">View Now</a>
                    </div>
                </div>
            </div>
      <% } %>
  </div>


  <script src="/js/wishList.js"></script>
